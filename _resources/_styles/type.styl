html {
  font-size: 16px;
  font-family: typeface-primary, serif;
}

@media laptop {
  html {
    font-size: 16px;
  }
}

body, p {
	font-size: 1rem;
}

.unselectable {
  -moz-user-select: none;
  -webkit-user-select: none;
  -ms-user-select: none;
}

a {
	text-decoration: none;
	color: color-text;
  border-bottom: 1px solid color-text;
}
