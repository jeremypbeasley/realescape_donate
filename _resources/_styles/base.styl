html {
  min-height: 100%;
}

* {
  -webkit-tap-highlight-color: rgba(0,0,0,0);
  -webkit-font-smoothing: antialiased;
  font-smoothing: antialiased;
  box-sizing: border-box;
}

body {
  height: 100%;
  overflow-y: auto;
  overflow-x: hidden;
  margin: 0;
  background-color: color-background;
  color: color-text;
}

header {
  padding: 11vw 11vw 0 11vw;
}

.logo {
  width: 80px;
}

form {
  margin-top: 11vw;
  max-width: 550px;
}

@media laptop {
  form {
    margin-top: calc(4.5vw * -1)
  }
}

.FooterLine {
  width: 100%;
  height: 0px;
  border-top: 1px solid color-text;
}
