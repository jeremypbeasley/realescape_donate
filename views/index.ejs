<% include header.ejs %>

<div class="row">
  <div class="column col-xs-12 col-md-4 col-md-offset-4 mt10 mb10">
    <form action="/thanks" method="POST" id="payment-form" name="payment-form">
      <div class="FormErrorsCont">
        <div class="FormErrors"></div>
      </div>
      <div class="FormItem2 mb4">
        <label>
          <span class="Caption">Donation Amount</span>
          <div class="GiftAmount">
            <input class="InputGiftAmount" type="tel" name="stripeAmount">
            <input type="hidden" name="productId" value="prod_A06J6m2sZjfgXq">
          </div>
        </label>
      </div>
      <div class="FormItem">
        <label class="Caption">Name</label>
        <input class="InputText" type="text" data-stripe="name" name="customer_name" autocomplete="name">
      </div>
      <div class="FormItem">
        <label class="Caption">Card Number</label>
        <input class="InputText" type="tel" data-stripe="number" id="cc" maxlength="16" autocomplete="cc-number">
      </div>
      <div class="FormItem Expiration Month">
        <label class="Caption">Exp. (MM)</label>
        <input class="InputText" type="tel" size="2" data-stripe="exp_month" id="ccm" maxlength="2" autocomplete="cc-exp-month">
      </div>
      <div class="FormItem Expiration">
        <label class="Caption">Exp. (YY)</label>
        <input class="InputText" type="tel" size="2" data-stripe="exp_year" id="ccy" maxlength="2" autocomplete="cc-exp-year">
      </div>
      <div class="FormItem Expiration">
        <label class="Caption">Security Code</label>
        <input class="InputText" type="tel" size="4" data-stripe="cvc" id="cvv" maxlength="4" autocomplete="cc-csc">
      </div>
      <div class="FormItem">
        <label class="Caption">Email</label>
        <input class="InputText" type="email" name="stripeEmail" autocomplete="email">
      </div>
      <button class="SubmitButton mt8">
        <div class="CompleteCheck"></div>
        <div class="LoadingSpinnerCont">
          <div class="LoadingSpinner"></div>
        </div>
        <span class="Purchase">Submit</span>
        <span class="Loading">Loading</span>
        <span class="Complete">Complete</span>
      </button
    </form>
  </div>
</div>

<script type="text/javascript" src="https://js.stripe.com/v2/"></script>
<script type="text/javascript" src="master.js"></script>

<% include footer.ejs %>
